// Use dem poppers

useonce

wait 400

// If poppers not loaded in list/untrapped
if insysmsg 'the useonce queue is empty'
    setvar 'pouch1'
    setvar 'pouch2'
    setvar 'pouch3'
    setvar 'pouch4'

    wait 1250
    
    cast 'magic trap'
    waitfortarget 
    target 'pouch1'
    
    wait 1250
    
    cast 'magic trap'
    waitfortarget 
    target 'pouch2'
    
    wait 1250
    
    cast 'magic trap'
    waitfortarget 
    target 'pouch3'
    
    wait 1250
    
    cast 'magic trap'
    waitfortarget 
    target 'pouch4'
    
    wait 400
    
    // Add poppers to list
    useonce 'add'
    waitfortarget 
    target 'pouch1'
    
    useonce 'add'
    waitfortarget 
    target 'pouch2'
    
    useonce 'add'
    waitfortarget 
    target 'pouch3'
    
    useonce 'add'
    waitfortarget 
    target 'pouch4'
endif